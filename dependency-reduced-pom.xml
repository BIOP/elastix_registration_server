  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.epfl.biop</groupId>
  <artifactId>elastix_registration_server</artifactId>
  <name>Elastix registration server</name>
  <version>0.1.0-SNAPSHOT</version>
  <description>Server to launch elastix and transformix tasks</description>
  <url>https://github.com/NicoKiaru/TODO</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/TODO</url>
  </issueManagement>
  <ciManagement>
    <system>Travis CI</system>
    <url>https://travis-ci.com/TODO</url>
  </ciManagement>
  <inceptionYear>2021</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>ImageJ Forum</name>
      <archive>http://forum.imagej.net/</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>nicokiaru</id>
      <name>Nicolas Chiaruttini</name>
      <url>http://imagej.net/User:NicoKiaru</url>
      <roles>
        <role>developer</role>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
        <role>maintainer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>John Doe</name>
      <roles>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
      </roles>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>Simplified BSD License</name>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/TODO</connection>
    <developerConnection>scm:git:git@github.com:TODO</developerConnection>
    <url>https://github.com/TODO</url>
  </scm>
  <organization>
    <name>BIOP, EPFL</name>
    <url>https://www.epfl.ch/research/facilities/ptbiop/</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>ch.epfl.biop.server.RegistrationServerStarter</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>sc.fiji</artifact>
              <excludes>
                <exclude>lenscorrection/NonLinearTransform.class</exclude>
              </excludes>
            </filter>
          </filters>
          <artifactSet>
            <excludes>
              <exclude>*hadoop*</exclude>
              <exclude>*spark*</exclude>
              <exclude>*scala*</exclude>
            </excludes>
          </artifactSet>
          <relocations>
            <relocation>
              <pattern>org.apache.commons.compress</pattern>
              <shadedPattern>org.janelia.saalfeldlab.org.apache.commons.compress</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>scijava.public</id>
      <url>https://maven.scijava.org/content/groups/public</url>
    </repository>
    <repository>
      <id>saalfeld-lab-maven-repo</id>
      <url>https://saalfeldlab.github.io/maven</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <commons-text.version>1.6</commons-text.version>
    <httpclient.version>4.5.3</httpclient.version>
    <commons-io.version>2.7</commons-io.version>
    <junit.version>4.13</junit.version>
    <jetty.version>9.4.27.v20200227</jetty.version>
    <ijl-utilities-wrappers.version>0.3.17</ijl-utilities-wrappers.version>
    <package-name>ch.epfl.biop.server</package-name>
    <gson.version>2.8.5</gson.version>
    <license.organizationName>EPFL, ECOLE POLYTECHNIQUE FEDERALE DE LAUSANNE, Switzerland, BioImaging And Optics Platform (BIOP), 2021</license.organizationName>
    <maven.compiler.target>1.8</maven.compiler.target>
    <license.copyrightOwners>Nicolas Chiaruttini, EPFL</license.copyrightOwners>
    <license.excludes>**/resources/**</license.excludes>
    <assertj.version>3.6.2</assertj.version>
    <license.projectName>BIOP Elastix Registration Server</license.projectName>
    <maven.compiler.source>1.8</maven.compiler.source>
    <license.licenseName>bsd_3</license.licenseName>
  </properties>
</project>

